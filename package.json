{
  "name": "dynamicform-project",
  "private": false,
  "version": "0.10.00",
  "description": "Data entry boilerplate components and a RESTful API consumer",
  "author": "Jure Erzno≈ænik",
  "workspaces": [
    "vue/*"
  ],
  "scripts": {
    "clean": "rf",
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "publish": "npm run build || cd vue/dynamicforms && np && cd ../..",
    "build-no-tsc": "npm run build-no-tsc --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "docs:dev": "vitepress dev doc",
    "docs:build": "vitepress build doc",
    "docs:preview": "vitepress preview doc"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.28.3",
    "concurrently": "^8.0.1",
    "typescript": "^4.9.3",
    "vitepress": "^1.0.0-alpha.72"
  },
  "eslintConfig": {
    "extends": [
      "velis"
    ],
    "rules": {
      "vuejs-accessibility/click-events-have-key-events": "off",
      "vuejs-accessibility/form-control-has-label": "off",
      "vuejs-accessibility/label-has-for": "off"
    },
    "ignorePatterns": [
      "dist/*",
      "coverage/*",
      "node_modules/*"
    ]
  }
}
