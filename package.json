{
  "name": "@velis/dynamicforms",
  "private": false,
  "version": "0.70.47",
  "description": "Data entry boilerplate components and a RESTful API consumer",
  "author": "Jure Erzno≈ænik",
  "workspaces": [ "vue/*" ],
  "scripts": {
    "serve": "npm run serve --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build-no-tsc": "npm run build-no-tsc --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "typescript": "^4.9.3",
    "vite": "^4",
    "vite-plugin-vuetify": "^1.0.0",
    "vite-plugin-eslint": "^1.8.1"
  },
  "eslintConfig": {
    "extends": [
      "velis"
    ],
    "rules": {
      "vuejs-accessibility/click-events-have-key-events": "off",
      "vuejs-accessibility/form-control-has-label": "off",
      "vuejs-accessibility/label-has-for": "off"
    },
    "ignorePatterns": [
      "dist/*",
      "coverage/*",
      "node_modules/*"
    ]
  }
}
