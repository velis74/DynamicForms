{
  "name": "dynamicforms",
  "version": "1.0.0",
  "description": "Data entry boilerplate components and a RESTful API consumer",
  "author": "Jure ErznoÅ¾nik",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint"
  },
  "main": "./vue/dynamicforms.js",
  "keywords": [
    "vue",
    "dynamicforms",
    "velis"
  ],
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git@github.com:velis74/DynamicForms.git"
  },
  "issues": "https://github.com/velis74/DynamicForms/issues",
  "dependencies": {
    "axios": ">=0.25.0",
    "dompurify": ">=2.3.4",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.15",
    "@vue/cli-plugin-eslint": "^4.5.15",
    "@vue/cli-plugin-unit-jest": "^4.5.0",
    "@vue/cli-service": "^4.5.15",
    "@vue/test-utils": "^1.3.0",
    "cache-loader": "^4.1.0",
    "eslint-config-velis": "^1.0.2",
    "flush-promises": "^1.0.2",
    "np": "^7.6.0",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^4.46.0"
  },
  "vue": {
    "outputDir": "./dynamicforms/static/vue/",
    "css": {
      "extract": {
        "ignoreOrder": true,
        "filename": "css/vue-dynamicforms.css",
        "chunkFilename": "css/vue-dynamicforms-vendor.css"
      }
    },
    "configureWebpack": {
      "entry": { "app": "./vue/main.js" },
      "resolve": {
        "extensions": [".js", ".vue", ".json"],
        "alias": { "dynamicforms": "./vue" }
      },
      "devServer": { "proxy": { ".*": { "target": "http://localhost:8000", "secure": false } } },
      "output": {
        "filename": "js/vue-dynamicforms.js",
        "chunkFilename": "js/vue-dynamicforms-vendors.js"
      }
    }
  },
  "babel": {
    "presets": [
      "@vue/cli-plugin-babel/preset"
    ]
  },
  "eslintConfig": { "extends": ["velis"] },
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest",
    "roots": ["./vue/"],
    "testMatch": ["**/*.spec.[jt]s?(x)"],
    "moduleFileExtensions": ["js", "json", "vue"],
    "transform": { ".*\\.(vue)$": "vue-jest" },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!index.*"
    ]
  }
}
